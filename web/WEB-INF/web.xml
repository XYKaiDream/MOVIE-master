<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
    
    <servlet>
        <servlet-name>homeServlet</servlet-name>
        <servlet-class>cn.ccttll.servlet.homeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/home.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homeServlet</servlet-name>
        <url-pattern>/searchHome.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>detailServlet</servlet-name>
        <servlet-class>cn.ccttll.servlet.detailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>detailServlet</servlet-name>
        <url-pattern>/detail.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>categoryServlet</servlet-name>
        <servlet-class>cn.ccttll.servlet.categoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>categoryServlet</servlet-name>
        <url-pattern>/category.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    <servlet-name>categoryServlet</servlet-name>
    <url-pattern>/dzCategory.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoryServlet</servlet-name>
        <url-pattern>/dmCategory.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoryServlet</servlet-name>
        <url-pattern>/jqCategory.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoryServlet</servlet-name>
        <url-pattern>/llCategory.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoryServlet</servlet-name>
        <url-pattern>/khCategory.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoryServlet</servlet-name>
        <url-pattern>/jlCategory.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoryServlet</servlet-name>
        <url-pattern>/jpCategory.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>categoryServlet</servlet-name>
        <url-pattern>/aqCategory.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>searchServlet</servlet-name>
        <servlet-class>cn.ccttll.servlet.searchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchServlet</servlet-name>
        <url-pattern>/search.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registServlet</servlet-name>
        <servlet-class>cn.ccttll.servlet.registServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registServlet</servlet-name>
        <url-pattern>/regist.do</url-pattern>
    </servlet-mapping>
    <servlet>
    <servlet-name>loginServlet</servlet-name>
    <servlet-class>cn.ccttll.servlet.loginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginServlet</servlet-name>
        <url-pattern>/login.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>reg_logServlet</servlet-name>
        <servlet-class>cn.ccttll.servlet.reg_logServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>reg_logServlet</servlet-name>
        <url-pattern>/reg_log.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>commentServlet</servlet-name>
        <servlet-class>cn.ccttll.servlet.commentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>commentServlet</servlet-name>
        <url-pattern>/comment.do</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>CharsetEncodingFilter</filter-name>
        <filter-class>cn.ccttll.filter.CharsetEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>cn.ccttll.filter.loginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/main/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CharsetEncodingFilter</filter-name>
        <url-pattern>*.do</url-pattern>
    </filter-mapping>

</web-app>